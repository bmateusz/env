#!/bin/bash

if [ "$#" -ne 1 ]
then
  echo "usage:"
  echo "$0 filename_to_gen"
else

  HFILE="$1.h"
  CFILE="$1.c"

  if [ ! -f $HFILE ]
  then
    HDEF="${1^^}_H"
    echo -e "#ifndef $HDEF\n#define $HDEF\n\n\n\n#endif" > $HFILE
  else
    echo "$HFILE already exists"
  fi

  if [ ! -f $CFILE ]
  then
    echo -e "#include \"$HFILE\"\n\n" > $CFILE
  else
    echo "$CFILE already exists"
  fi

fi
